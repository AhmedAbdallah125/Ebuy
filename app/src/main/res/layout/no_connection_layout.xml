<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/noInternetAnimationView"
        android:layout_width="@dimen/_192sdp"
        android:layout_height="@dimen/_192sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.39"
        app:lottie_autoPlay="true"
        app:lottie_loop="false"
        app:lottie_rawRes="@raw/connectionless" />

    <TextView
        android:id="@+id/txt"
        style="@style/heading3"
        android:layout_width="@dimen/_192sdp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_25sdp"
        android:gravity="center"
        android:lines="2"
        android:text="@string/please_connect_to_network_to_use_our_application"
        android:textColor="@android:color/darker_gray"
        android:textSize="@dimen/fontHeading4"
        app:layout_constraintEnd_toEndOf="@+id/noInternetAnimationView"
        app:layout_constraintStart_toStartOf="@+id/noInternetAnimationView"
        app:layout_constraintTop_toBottomOf="@+id/noInternetAnimationView" />
</androidx.constraintlayout.widget.ConstraintLayout>