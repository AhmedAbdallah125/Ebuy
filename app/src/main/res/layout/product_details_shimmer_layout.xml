<?xml version="1.0" encoding="utf-8"?>
<com.facebook.shimmer.ShimmerFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"

    android:layout_height="match_parent"
    android:background="@android:color/transparent">

    <FrameLayout
        android:id="@+id/parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_8sdp"
        android:background="@android:color/transparent"
        app:cardCornerRadius="@dimen/_7sdp"
        app:cardElevation="@dimen/_8sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_8sdp"
            android:background="@android:color/transparent"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_231sdp"
                android:background="@color/background" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_25sdp" />


            <TextView
                style="@style/heading3"
                android:layout_width="@dimen/_385sdp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_4sdp"
                android:background="@color/background"
                android:textSize="@dimen/fontHeading6" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_25sdp" />


            <TextView
                style="@style/heading3"
                android:layout_width="@dimen/_192sdp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_4sdp"
                android:background="@color/background"
                android:textSize="@dimen/fontHeading6" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_12sdp" />


            <TextView
                style="@style/heading3"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_192sdp"
                android:layout_marginEnd="@dimen/_12sdp"
                android:background="@color/background"
                android:textSize="@dimen/fontHeading6" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_154sdp"
                android:layout_marginTop="@dimen/_12sdp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView14"
                    style="@style/heading3"
                    android:layout_width="@dimen/_96sdp"
                    android:layout_height="@dimen/_192sdp"
                    android:background="@color/background"
                    android:textSize="@dimen/fontHeading6"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <View
                    android:layout_width="@dimen/_98sdp"
                    android:layout_height="@dimen/_192sdp"
                    android:layout_gravity="end"
                    android:layout_marginEnd="@dimen/_12sdp"
                    android:background="@color/background"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/textView14" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>

    </FrameLayout>

</com.facebook.shimmer.ShimmerFrameLayout>