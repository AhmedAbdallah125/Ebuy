<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Ebuy" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/Primary</item>
        <item name="colorPrimaryVariant">@color/Primary</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/Secondary</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" >@color/white</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="heading3" parent="Widget.MaterialComponents.TextView">
        <item name="fontFamily">@font/poppins</item>
        <item name="android:textSize">@dimen/fontHeading3</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="fontBoldStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/Secondary</item>
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="cardTextStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/Secondary</item>
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/fontHeading6</item>
    </style>
        
    <style name="textInputEditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:background">@color/btnColor</item>
        <item name="android:textSize">@dimen/fontHeading5</item>
    </style>
    <style name="textStyle" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/poppins</item>
    </style>

</resources>